{
  "compilerOptions": {
    "lib": [ "es6", "es2021", "es2022" ],
    "module": "ES2022",
    "target": "ES2021",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "resolveJsonModule": true
  },
  "in": [
    "src/**/*"
  ]
}
